PAPER = dummy_name

OS = $(shell uname)
ifeq ($(OS),Darwin)
	VIEWER=open
endif
ifeq ($(OS),Linux)
	VIEWER=evince
endif

make:
	echo x | pdflatex $(PAPER)
	echo x | pdflatex $(PAPER)

clean:
	rm -f $(PAPER).aux 
	rm -f $(PAPER).dvi
	rm -f $(PAPER).bbl
	rm -f $(PAPER).blg
	rm -f $(PAPER).log
	rm -f $(PAPER).nav
	rm -f $(PAPER).toc
	rm -f $(PAPER).out 
	rm -f $(PAPER).pdf
	rm -f $(PAPER).synctex.gz
	rm -f *~

x:
	$(VIEWER) $(PAPER).pdf
